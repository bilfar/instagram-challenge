<h1>Instagram</h1>

<div class="posts-wrapper row">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post-head">
        <div class="name">
          Nabil
        </div>
      </div>
      <div class="image center-block">
        <%= link_to (image_tag post.image), post_path(post) %>
        <!-- <%= link_to (image_tag post, class:'img-responsive'), post_path(post) %> -->
      </div>
      <p class="caption">
        <%= post.caption %>
      </p>
    </div>
  <% end %>
</div>
